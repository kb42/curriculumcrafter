# MySQL Database Configuration
# Replace these with your actual MySQL/Aiven credentials

# For Aiven Cloud MySQL:
MYSQL_HOST=your-mysql-host.aivencloud.com
MYSQL_PORT=12345
MYSQL_DATABASE=defaultdb
MYSQL_USER=avnadmin
MYSQL_PASSWORD=your-secure-password-here

# For Local MySQL (alternative):
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_DATABASE=curriculumcrafter
# MYSQL_USER=root
# MYSQL_PASSWORD=your-local-password

# JWT Configuration
# Generate a secure secret key with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your-super-secret-jwt-key-replace-this-with-random-string
JWT_ACCESS_TOKEN_EXPIRES=3600  # Token expiration in seconds (1 hour = 3600)

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
